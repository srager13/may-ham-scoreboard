# ============================================
# DOCKER SETUP (Cross-platform)
# ============================================

# File: Dockerfile.backend
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY backend . 
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux go build -o golf-api .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/golf-api .

EXPOSE 8080
CMD ["./golf-api"]